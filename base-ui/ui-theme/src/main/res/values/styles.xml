<resources>

    <style name="Text" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/size_xx_small</item>
        <item name="android:paddingBottom">@dimen/size_xx_small</item>
    </style>

    <style name="AppTheme.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Text.Header">
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Text.Header.Remark">
        <item name="android:textColor">@color/green_500</item>
    </style>

    <style name="Text.Label">
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="Text.Caption">
        <item name="android:layout_height">@dimen/font_size_medium</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <style name="Text.Indicator">
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

</resources>